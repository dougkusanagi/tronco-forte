# Configurações de Ambiente - Tronco Forte
# Copie este arquivo para .env e configure as variáveis

# Ambiente da aplicação
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Configurações do banco de dados
DB_HOST=localhost
DB_PORT=3306
DB_NAME=tronco_forte
DB_USER=root
DB_PASS=

# Configurações de email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=contato@troncoforte.com.br
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=contato@troncoforte.com.br
MAIL_FROM_NAME="Tronco Forte"

# Configurações de API
API_KEY=
API_SECRET=

# Configurações de cache
CACHE_DRIVER=file
CACHE_TTL=3600

# Configurações de sessão
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# Configurações de log
LOG_LEVEL=debug
LOG_CHANNEL=file

# Configurações de upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Configurações de segurança
APP_KEY=
JWT_SECRET=
ENCRYPTION_KEY=

# Configurações de terceiros
GOOGLE_ANALYTICS_ID=
GOOGLE_MAPS_API_KEY=
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Configurações de redes sociais
FACEBOOK_URL=https://facebook.com/troncoforte
INSTAGRAM_URL=https://instagram.com/troncoforte
LINKEDIN_URL=https://linkedin.com/company/troncoforte
YOUTUBE_URL=https://youtube.com/troncoforte

# Configurações de contato
CONTACT_EMAIL=contato@troncoforte.com.br
CONTACT_PHONE=(11) 3456-7890
CONTACT_WHATSAPP=5511987654321
CONTACT_ADDRESS="Rua das Madeiras, 123 - São Paulo, SP"

# Configurações de horário
TIMEZONE=America/Sao_Paulo
LOCALE=pt_BR

# Configurações de performance
COMPRESSION_ENABLED=true
MINIFY_HTML=true
MINIFY_CSS=true
MINIFY_JS=true

# Configurações de backup
BACKUP_ENABLED=false
BACKUP_FREQUENCY=daily
BACKUP_RETENTION=30